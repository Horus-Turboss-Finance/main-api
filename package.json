{
  "name": "backend-cashsight",
  "version": "1.0.1",
  "author": "Horus Turboss <docteur.turboss@gmail.com>",
  "license": "ISC",
  "scripts": {
    "commit": "gitmoji -c",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major",
    "age:c:api": "age -a -o ./crypted-env -R ./keys/age-public.pem api.production.env",
    "age:d:api": "age -d -o ./production.env -i ./keys/sops-key ./crypted-env",
    "production:d:api": "age -o ./production.env -i ~/.ssh/age-key crypted-env",
    "dev": "node -r ts-node/register --env-file=development.env ./src/index.ts",
    "build": "tsc -p ./tsconfig.json",
    "staging-preprod": "npm run age:d:api && pm2 startOrReload ./ecosystem.config.js",
    "lint": "eslint .",
    "preproduction": "npm install && npm run build && npm run production:d:api",
    "production": "node --env-file=production.env ./dist/index.js"
  },
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "email-validator": "^2.0.4",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "mysql2": "^3.14.2",
    "prom-client": "^15.1.3",
    "ts-sql-query": "^1.67.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "standard-version": "^9.5.0",
    "@types/jsdom": "^21.1.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-fileupload": "^1.5.1",
    "ts-node": "^10.9.2"
  }
}
